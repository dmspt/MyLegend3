<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgawal"
    android:orientation="vertical"
    android:padding="@dimen/dp16"
    tools:context=".score_kuis">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:background="@drawable/quizbg"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/img"
                android:layout_width="222dp"
                android:layout_height="180dp"
                android:src="@drawable/jempol" />

            <TextView
                android:id="@+id/hasil"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="HASIL : "
                android:textColor="@color/black"
                android:textSize="@dimen/sp20"
                android:textStyle="normal|bold" />

            <TextView
                android:id="@+id/nilai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp16"
                android:layout_marginBottom="@dimen/dp16"
                android:text="NILAI"
                android:textColor="@color/design_default_color_error"
                android:textSize="60sp"
                android:textStyle="normal|bold" />

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/dp8">

                <Button
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/btnreturn"
                    android:clickable="true"
                    android:onClick="ulangi" />

                <Button
                    android:layout_width="@dimen/dp60"
                    android:layout_height="@dimen/dp60"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/btnclose"
                    android:clickable="true"
                    android:onClick="close" />

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>